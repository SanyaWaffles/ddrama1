script "DDLib_Het" (int _seconds1, int _seconds2)
{
	func_StopMusic();
	
	while (_seconds1 > 0)
	{
		Delay(TICS_PER_SECOND);
		_seconds1--;
	}
	
	GiveInventory("DD_VOX_RIPFelixHet", 1);
	
	if (_seconds2 <= 0)
		_seconds2 = 1;
	
	Delay(TICS_PER_SECOND *_seconds2);
	
}

script "DDLib_JeopardyGameOver" (void)
{
